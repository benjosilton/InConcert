<div class="container">
<% for showup in @showups %>
<div class="row my-6">
<div class="col-md-3">
<img src=<%= showup[:photo] %> alt=<%=showup[:artists] %> height="150">
</div>
<div class="col-md-3">
<h3><%= showup[:artists] %>
</div>
<div class="col-md-2">
<h4><%= showup[:date] %></h4>
</div>
<div class="col-md-3">
<h5><a href="/showups/<%= showup[:id] %>"><%= showup[:pregame_loc] %></a></p>
</h5>
</div>
<div class="col-md-1">
<% if @current_user && @current_user[:id] == showup[:user_id] %>
(<a href="/showups/<%= showup[:id] %>/edit">edit</a> | <a href="/showups/<%= showup[:id] %>/destroy">delete</a>)
<% end %>
</div>
</div>
<br>
<% end %>
</div>
